<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="mb-0">Write New Blog Post</h2>
                </div>
                <div class="card-body">
                    <form action="/blogs" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="title" class="form-label">Title *</label>
                            <input type="text" class="form-control" id="title" name="title" required 
                                   placeholder="What's on your mind today?">
                            <div class="invalid-feedback">
                                Please provide a title for your entry.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">Content *</label>
                            <textarea class="form-control" id="content" name="content" rows="8" required
                                      placeholder="Write your thoughts, feelings, and experiences..."></textarea>
                            <div class="invalid-feedback">
                                Please write something in your post.
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="mood" class="form-label">How are you feeling?</label>
                                    <select class="form-select" id="mood" name="mood">
                                        <option value="Happy">üòä Happy</option>
                                        <option value="Sad">üò¢ Sad</option>
                                        <option value="Excited">ü§© Excited</option>
                                        <option value="Calm">üòå Calm</option>
                                        <option value="Anxious">üò∞ Anxious</option>
                                        <option value="Grateful">üôè Grateful</option>
                                        <option value="Other">ü§î Other</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="weather" class="form-label">Weather</label>
                                    <input type="text" class="form-control" id="weather" name="weather" 
                                           placeholder="e.g., Sunny, Rainy, Cloudy">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="tags" class="form-label">Tags</label>
                            <input type="text" class="form-control" id="tags" name="tags" 
                                   placeholder="Separate tags with commas (e.g., work, family, goals)">
                            <div class="form-text">Tags help you organize and find your entries later.</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isPrivate" name="isPrivate" checked>
                                <label class="form-check-label" for="isPrivate">
                                    Keep this post private
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/blogs" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Blog
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Publish Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Form validation
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();
</script>

