<%- include('partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h1 class="mb-0">
                        <i class="fas fa-home me-2"></i>Welcome, <%= currentUser.username %>!
                    </h1>
                </div>
                <div class="card-body">
                    <p class="lead">This is your personal dairy dashboard where you can manage your thoughts and experiences.</p>
                    
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="fas fa-book-open fa-3x text-primary mb-3"></i>
                                    <h5 class="card-title">View Entries</h5>
                                    <p class="card-text">Read and reflect on your previous dairy entries</p>
                                    <a href="/dairy" class="btn btn-primary">
                                        <i class="fas fa-eye me-2"></i>View Entries
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="fas fa-plus fa-3x text-success mb-3"></i>
                                    <h5 class="card-title">New Entry</h5>
                                    <p class="card-text">Write about your day, thoughts, or experiences</p>
                                    <a href="/dairy/new" class="btn btn-success">
                                        <i class="fas fa-pen me-2"></i>Write Entry
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="fas fa-user-cog fa-3x text-info mb-3"></i>
                                    <h5 class="card-title">Profile</h5>
                                    <p class="card-text">Manage your account settings and preferences</p>
                                    <a href="/profile" class="btn btn-info">
                                        <i class="fas fa-cog me-2"></i>Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="fas fa-chart-line me-2"></i>Quick Stats
                                    </h5>
                                    <a href="/dashboard" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-sync-alt me-1"></i>Refresh
                                    </a>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-md-3">
                                            <h3 class="text-primary">
                                                <i class="fas fa-book me-2"></i>
                                                <%= stats.totalEntries %>
                                            </h3>
                                            <p class="text-muted">Total Entries</p>
                                        </div>
                                        <div class="col-md-3">
                                            <h3 class="text-success">
                                                <i class="fas fa-calendar me-2"></i>
                                                <%= stats.thisMonth %>
                                            </h3>
                                            <p class="text-muted">This Month</p>
                                        </div>
                                        <div class="col-md-3">
                                            <h3 class="text-info">
                                                <i class="fas fa-tags me-2"></i>
                                                <%= stats.uniqueTags %>
                                            </h3>
                                            <p class="text-muted">Unique Tags</p>
                                        </div>
                                        <div class="col-md-3">
                                            <h3 class="text-warning">
                                                <i class="fas fa-clock me-2"></i>
                                                <%= stats.lastEntry %>
                                            </h3>
                                            <p class="text-muted">Last Entry</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('partials/footer') %>
